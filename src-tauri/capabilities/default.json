{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "opener:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    }
  ]
}